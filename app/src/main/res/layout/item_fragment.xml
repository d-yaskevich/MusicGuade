<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_item"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_folder_black_24px">
    </ImageView>

    <TextView
        android:id="@+id/name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_item"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:text="Name file or directory"
        android:textStyle="bold"
        android:textSize="18sp">
    </TextView>

    <TextView
        android:id="@+id/subname_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_item"
        android:layout_alignLeft="@+id/name_item"
        android:text="1 objects">

    </TextView>

    <TextView
        android:id="@+id/info_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_alignBottom="@+id/subname_item"
        android:text="DATE AND TIME SAVING">
    </TextView>

</RelativeLayout>